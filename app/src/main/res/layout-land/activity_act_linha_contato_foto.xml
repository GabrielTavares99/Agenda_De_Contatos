<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/layout_foto_img_foto"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_margin="8dp"
        android:src="@drawable/person"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_nome"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/transparent"
        android:fontFamily="monospace"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/layout_foto_img_foto"
        app:layout_constraintTop_toTopOf="@id/layout_foto_img_foto" />

    <TextView
        android:id="@+id/lbl_telefone"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/transparent"
        android:fontFamily="monospace"
        android:text="2555-0010"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/layout_foto_img_foto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/layout_foto_img_foto"
        app:layout_constraintTop_toBottomOf="@id/lbl_nome" />

    <TextView
        android:id="@+id/act_linha_contato_foto_lbl_grupo"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:fontFamily="monospace"
        android:text="Grupo"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/lbl_nome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/lbl_nome"
        app:layout_constraintTop_toTopOf="@id/lbl_nome" />

</android.support.constraint.ConstraintLayout>