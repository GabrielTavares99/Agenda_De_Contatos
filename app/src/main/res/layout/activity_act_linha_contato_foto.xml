<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/layout_foto_img_foto"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_margin="8dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/person"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        tools:src="@sample/contatos.json/contatos/imagem" />

    <LinearLayout
        android:id="@+id/layout_fundo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="0dp">

        <TextView
            android:id="@+id/lbl_nome"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:fontFamily="monospace"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="@sample/contatos.json/contatos/nome" />

        <TextView
            android:id="@+id/lbl_telefone"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:fontFamily="monospace"
            android:textSize="24sp"
            tools:text="@sample/contatos.json/contatos/numero" />
    </LinearLayout>
</LinearLayout>